<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Pizzeria Astratta " textAlignment="CENTER">
               <font>
                  <Font name="Arial Bold" size="32.0" />
               </font>
               <VBox.margin>
                  <Insets left="175.0" />
               </VBox.margin>
            </Label>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label fx:id="calabrese" onMouseClicked="#sceltaCalabrese" text="Calabrese">
                     <font>
                        <Font name="Arial Black" size="43.0" />
                     </font>
                  </Label>
                  <Label fx:id="napoletana" onMouseClicked="#sceltaNapoletana" prefHeight="59.0" prefWidth="220.0" text="Napoletana">
                     <font>
                        <Font name="Arial Bold" size="40.0" />
                     </font>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <HBox.margin>
                        <Insets left="120.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <Label fx:id="annuncioScelti" text="Ecco i tuoi prodotti" visible="false">
               <font>
                  <Font name="Arial" size="32.0" />
               </font>
               <VBox.margin>
                  <Insets left="175.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="bottone" disable="true" mnemonicParsing="false" onAction="#generaProdotti" text="Genera Prodotti" visible="false">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
               <VBox.margin>
                  <Insets left="250.0" />
               </VBox.margin>
            </Button>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="175.0">
               <children>
                  <ImageView fx:id="pizzaImmagine" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <HBox.margin>
                        <Insets left="25.0" />
                     </HBox.margin>
                  </ImageView>
                  <ImageView fx:id="patatineImmagine" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <HBox.margin>
                        <Insets right="25.0" />
                     </HBox.margin>
                  </ImageView>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
